@{
  Layout = "_Layout";
}

<h2>Edit stylist: @Model.GetName()</h2>
<form class="form-inline" action="/stylists/@Model.GetId()/update" method="post">
    <div class="form-group">
      <label for="new-name">Name:</label>
      <input type="text" class="form-control" name="new-name" value="@Model.GetName()">
    </div>
    <div class="form-group">
      <label for="new-phone">Phone:</label>
      <input type="text" class="form-control" name="new-phone" value="@Model.GetPhone()">
    </div>
    <button type="submit" class="btn btn-default">Edit</button>
</form>
