@{
  Layout = "_Layout";
}

@if (Model.Count == 0)
{
  <h3>No Clients have been assigned to this Stylist yet</h3>
}
else
{
<h3>All Clients of this Stylist</h3>

<div class="list-group">
  @foreach(var client in Model)
  {
    <a href="/clients/@client.GetId()/details" class="list-group-item"><h2>@client.GetName()</h2>  Phone: @client.GetPhone() <p>Notes: @client.GetNotes()</p></a>
  <br/>
  }
</div>
}
