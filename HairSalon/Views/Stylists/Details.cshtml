@{
  Layout = "_Layout";
}

<div class="well">
  <h2> Stylist: @Model["stylist"].GetName()</h2>
  @if (@Model["specialties"].Count == 0)
  {
    <h4>no specialties yet</h4>
  }
  else
  {
    @foreach (var specialty in @Model["specialties"])
    {
      <h4>Specialty: @specialty.GetName()</h4>
    }
  }
  <h4> Phone: @Model["stylist"].GetPhone()</h4>
  <h4> Date of Hire: @Model["stylist"].GetHireDate().ToShortDateString()</h4>
</div>

<div class="well">
<h4>Add a specialty to this stylist: </h4>
<form class="form-inline" action="/stylists/@Model["stylist"].GetId()/specialties/new" method="post">
  <div class="form-group">
    <label for="specialty-id">Select a specialty</label>
    <select id="specialty-id" name="specialty-id" type="text">
      @foreach (var specialty in @Model["allSpecialties"])
      {
        <option value="@specialty.GetId()">@specialty.GetName()</option>
      }
    </select>
  </div>
  <button type="submit" class="btn btn-default">Add</button>
</form>
</div>
