@{
  Layout = "_Layout";
}

@if (Model.Count == 0)
{
  <h3>No stylists yet</h3>
  <p>Select "Add a Stylist" on the navigation bar to add stylists</p>
}
else
{
<h2>Stylists</h2>
<div class="list-group">
@foreach(var stylist in Model)
{
  <h2 class="list-group-item">@stylist.GetName()</h2>
  <a href="/stylists/@stylist.GetId()/view" class="list-group-item">View all clients of this stylist</a>
  <a href="/stylists/@stylist.GetId()/update" class="list-group-item">Edit this stylist</a>
  <a href="/stylists/@stylist.GetId()/delete" class="list-group-item">Delete this stylist</a>
  }
</div>

<form action="/stylists/delete" method="post">
  <button type="submit" name="button" class="btn btn-default">Clear All Stylists</button>
</form>
}
