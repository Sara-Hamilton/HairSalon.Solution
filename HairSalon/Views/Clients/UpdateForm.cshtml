@{
  Layout = "_Layout";
}

</hr>
<h2>Edit Client: @Model["client"].GetName()</h2>
<form class="form-inline" action="/clients/@Model["client"].GetId()/update" method="post">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" class="form-control" name="new-name" value="@Model["client"].GetName()">
    </div>

    <div class="form-group">
    <label for="newStylistId">Stylist:</label>
      <select class="form-control" name="new-stylist">
        @foreach(var stylist in @Model["stylists"])
        {
          <option value=@stylist.GetId()>@stylist.GetName()</option>
        }
      </select>
    </div>

    <div class="form-group">
      <label for="phone">Phone:</label>
      <input type="text" class="form-control" name="new-phone" value="@Model["client"].GetPhone()">
    </div>

    <div class="form-group">
      <label for="notes">Notes:</label>
      <input type="text" class="form-control" name="new-notes" value="@Model["client"].GetNotes()">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>
